<%= stylesheet_link_tag "userform" %>

<div class="prompt-container">
  <h1 id="prompt-title">Forgot your password?</h1>

  <div id="form-box">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, id:"form-title" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"entry-box" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", id:"forgot-password-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>